<%= render "shared/navbar", title: "Categories" %>
<section style="margin-top: 5rem;">
  <div id="groups">
    <% @groups.each do |group|%>
      <%= render group %>
    <% end %>
  </div>
  <% if @groups.empty? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading text-center">You have no categories yet</h4>
    </div>
  <% end %>
</section>
<div class="add-cat">
  <%= link_to new_user_group_path(current_user), class: "btn btn-info" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="#fff" class="bi bi-plus-lg" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
    </svg>
  <% end %>
</div>
